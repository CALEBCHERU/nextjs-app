generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//NB: adding a new model or changing anything in the existing model ua re required to re-run this command: npx prisma generate
model Form {
  id        Int      @id @default(autoincrement())
  name      String
  age       Int
  email     String
  gender    String
  bio       String
  createdAt DateTime @default(now())
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  price       Int
  description String
  createdAt   DateTime @default(now())
}
